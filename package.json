{
  "name": "capstone-project-backend",
  "version": "1.0.0",
  "description": "Backend for Community Connect",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:all": "npm run clean && rm -rf node_modules",
    "build": "npm run clean && tsc -p . && tsc-alias",
    "dev": "nodemon",
    "prestart": "npm run build",
    "start": "node dist/src/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env IS_DB_MIGRATING=true tsx src/db/migrate.ts",
    "db:seed": "cross-env IS_DB_SEEDING=true tsx src/db/seed.ts",
    "db:check": "drizzle-kit check",
    "db:show": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manishsharma0398/capstone-project-backend.git"
  },
  "author": "Manish Sharma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/manishsharma0398/capstone-project-backend/issues"
  },
  "homepage": "https://github.com/manishsharma0398/capstone-project-backend#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "argon2": "^0.44.0",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "express-zod-safe": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.17"
  },
  "engines": {
    "node": ">=22.17.1"
  }
}
